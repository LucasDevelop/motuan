<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/frame_toolbar" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_E6E6E6" />

    <TextView
        style="@style/TextViewTheme"
        android:layout_margin="12dp"
        android:text="店铺动态评分"
        android:textSize="17sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            style="@style/TextViewTheme"
            android:text="商品质量"
            android:textSize="14sp" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/pb_goods"
            android:layout_width="115dp"
            android:layout_height="10dp"
            android:layout_marginStart="12dp"
            app:rcBackgroundColor="@color/grey_F6F6F6"
            app:rcMax="100"
            app:rcProgress="80"
            app:rcProgressColor="@color/yellow_FECC32"
            app:rcRadius="250dp" />

        <TextView
            android:id="@+id/tv_goodsNum"
            style="@style/TextViewTheme"
            android:layout_marginStart="12dp"
            android:textColor="@color/yellow_FECC32"
            android:textSize="14sp"
            tools:text="4.7" />

        <TextView
            android:id="@+id/tv_goods"
            style="@style/TextViewTheme"
            android:layout_marginStart="12dp"
            android:textColor="@color/grey_999"
            android:textSize="11sp"
            tools:text="高于同行7.34%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            style="@style/TextViewTheme"
            android:text="服务态度"
            android:textSize="14sp" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/rb_service"
            android:layout_width="115dp"
            android:layout_height="10dp"
            android:layout_marginStart="12dp"
            app:rcBackgroundColor="@color/grey_F6F6F6"
            app:rcMax="100"
            app:rcProgress="80"
            app:rcProgressColor="@color/yellow_FECC32"
            app:rcRadius="250dp" />

        <TextView
            android:id="@+id/tv_serviceNum"
            style="@style/TextViewTheme"
            android:layout_marginStart="12dp"
            android:textColor="@color/yellow_FECC32"
            android:textSize="14sp"
            tools:text="3.6" />

        <TextView
            android:id="@+id/tv_service"
            style="@style/TextViewTheme"
            android:layout_marginStart="12dp"
            android:textColor="@color/grey_999"
            android:textSize="11sp"
            tools:text="高于同行3.78%" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingStart="12dp"
        android:paddingEnd="12dp">

        <TextView
            style="@style/TextViewTheme"
            android:text="物流服务"
            android:textSize="14sp" />

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:id="@+id/pb_expressage"
            android:layout_width="115dp"
            android:layout_height="10dp"
            android:layout_marginStart="12dp"
            app:rcBackgroundColor="@color/grey_F6F6F6"
            app:rcMax="100"
            app:rcProgress="80"
            app:rcProgressColor="@color/yellow_FECC32"
            app:rcRadius="250dp" />

        <TextView
            android:id="@+id/tv_expressageNum"
            style="@style/TextViewTheme"
            android:layout_marginStart="12dp"
            android:textColor="@color/yellow_FECC32"
            android:textSize="14sp"
            tools:text="4.8" />

        <TextView
            android:id="@+id/tv_expressage"
            style="@style/TextViewTheme"
            android:layout_marginStart="12dp"
            android:textColor="@color/grey_999"
            android:textSize="11sp"
            tools:text="高于同行9.36%" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_marginTop="20dp"
        android:background="@color/grey_F7F7F7" />

    <TextView
        style="@style/TextViewTheme"
        android:layout_margin="12dp"
        android:text="基础信息"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="12dp">

        <TextView
            style="@style/TextViewTheme"
            android:text="资质证明"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_aptitude"
            style="@style/TextViewTheme"
            android:layout_alignParentRight="true"
            android:drawableRight="@mipmap/shop_white_arrow"
            android:drawablePadding="6dp"
            android:textColor="@color/grey_999"
            android:textSize="13sp"
            tools:text="资质证明未上传" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp">

        <TextView
            style="@style/TextViewTheme"
            android:text="实名认证"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_authenticationType"
            style="@style/TextViewTheme"
            android:layout_alignParentRight="true"
            android:layout_marginStart="6dp"
            android:textColor="@color/grey_999"
            android:textSize="13sp"
            tools:text="已认证" />

        <ImageView
            android:layout_width="11dp"
            android:layout_height="13dp"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_authenticationType"
            android:src="@mipmap/authentication" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp">

        <TextView
            style="@style/TextViewTheme"
            android:text="开店时间"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_time"
            style="@style/TextViewTheme"
            android:layout_alignParentRight="true"
            android:textColor="@color/grey_999"
            android:textSize="13sp"
            tools:text="2018年11月09日" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_F7F7F7" />

</LinearLayout>