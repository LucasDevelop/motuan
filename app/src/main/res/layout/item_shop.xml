<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/frame_white_color"
    android:orientation="vertical"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/iv_cover"
            android:layout_width="match_parent"
            android:layout_height="171dp"
            android:src="#0ff" />


        <TextView
            android:id="@+id/tv_title"
            style="@style/TextViewTheme"
            android:layout_width="match_parent"
            android:layout_margin="@dimen/space"
            android:ellipsize="end"
            tools:text="2019春秋新品贝雷帽"
            android:maxLines="1" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_flag"
                style="@style/TextViewTheme"
                android:text="￥"
                android:layout_height="23dp"
                android:gravity="bottom"
                android:textColor="@color/red_FE4040"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_money"
                style="@style/TextViewTheme"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@id/tv_flag"
                android:textColor="@color/red_FE4040"
                android:textSize="18sp"
                tools:text="68.00" />



            <TextView
                android:id="@+id/tv_deletNumber"
                android:layout_alignParentEnd="true"
                style="@style/TextViewTheme"
                android:textColor="@color/grey_999"
                android:textSize="18sp"
                tools:text="68.00" />

            <TextView
                android:id="@+id/tv_deletFlag"
                style="@style/TextViewTheme"
                android:text="￥"
                android:layout_toStartOf="@id/tv_deletNumber"
                android:layout_height="21dp"
                android:gravity="bottom"
                android:textColor="@color/grey_999"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>