<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">


        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="确定不再关注此用户？"
            android:textColor="@color/grey_666"
            android:textSize="15sp"
            app:qmui_backgroundColor="@color/frame_white_color"
            app:qmui_radiusTopLeft="12dp"
            app:qmui_radiusTopRight="12dp"
            app:qmui_borderWidth="0dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_E6E6E6" />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="确定"
            android:background="@color/frame_white_color"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/grey_F8F8F8" />

        <TextView
            android:id="@+id/v_cancel"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:gravity="center"
            android:text="取消"
            android:background="@color/frame_white_color"
            android:textColor="@color/textColor"
            android:textSize="15sp" />
    </LinearLayout>
</RelativeLayout>