<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frame_black_color"
    android:orientation="vertical">

    <include layout="@layout/frame_toolbar" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:src="@mipmap/my_default_avatar" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt_change"
            android:layout_width="120dp"
            android:layout_height="42dp"
            android:text="更换头像"
            android:textSize="15sp"
            android:layout_marginBottom="28dp"
            android:layout_gravity="center_horizontal|bottom"
            android:textColor="@color/frame_white_color"
            app:qmui_backgroundColor="@color/black_333"
            app:qmui_borderWidth="0px"
            app:qmui_radius="250dp" />

    </FrameLayout>


</LinearLayout>