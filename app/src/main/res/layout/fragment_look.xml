<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_search"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:padding="10dp"
            android:src="@mipmap/home_search" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">


            <FrameLayout
                android:id="@+id/fl_recommend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:padding="10dp">



                <View
                    android:id="@+id/v_recommend"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:background="@color/yellow_FECC32" />

                <TextView
                    android:id="@+id/v_recommend_text"
                    style="@style/TextViewTheme"
                    android:text="推荐"
                    android:layout_gravity="center"
                    android:textSize="18sp" />


            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="16dp"
                android:layout_gravity="center_vertical"
                android:background="@color/grey_E0E0E0" />

            <FrameLayout
                android:id="@+id/fl_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp">



                <View
                    android:id="@+id/v_attention"
                    android:layout_width="40dp"
                    android:layout_height="4dp"
                    android:layout_gravity="bottom"
                    android:visibility="invisible"
                    android:background="@color/yellow_FECC32" />
                <TextView
                    android:id="@+id/v_attention_text"
                    style="@style/TextViewTheme"
                    android:text="关注"
                    android:layout_gravity="center"
                    android:textSize="18sp" />


            </FrameLayout>
        </LinearLayout>
        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt_write"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="12dp"
            android:paddingStart="10dp"
            android:drawableStart="@mipmap/write"
            android:layout_alignParentEnd="true"
            android:text="写看看"
            android:textColor="@color/textColor"
            android:textSize="13sp"
            app:qmui_backgroundColor="@color/yellow_FECC32"
            app:qmui_borderWidth="0px"
            app:qmui_radius="25dp" />


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/frame_look"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>