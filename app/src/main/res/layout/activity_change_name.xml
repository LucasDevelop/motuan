<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/frame_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginStart="@dimen/space"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="@dimen/space"
        android:background="@drawable/shape_changen_bg">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/space"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入群聊名称"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_delet"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="2dp"
            android:padding="10dp"
            android:visibility="invisible"
            android:src="@mipmap/changen_delet" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_hint"
        style="@style/TextViewTheme"
        android:layout_marginStart="@dimen/space"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="@dimen/space"
        android:text="在这里可以设置你在这个群里的昵称。这个昵称只会在此群内显示。"
        android:textColor="@color/grey_999"
        android:textSize="12sp" />

</LinearLayout>