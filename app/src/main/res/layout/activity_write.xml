<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_centerVertical="true"
                android:padding="10dp"
                android:src="@mipmap/write_back" />

            <TextView
                style="@style/TextViewTheme"
                android:layout_centerInParent="true"
                android:text="写看看"
                android:textSize="18sp" />
        </RelativeLayout>

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginStart="@dimen/space"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/space"
            android:layout_marginBottom="@dimen/space"
            android:background="@null"
            android:gravity="start"
            android:hint="写些什么和大家分享..."
            android:maxLength="1000"
            android:textColor="@color/textColor"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_contentSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/space"
            android:gravity="end"
            android:text="最多1000字"
            android:textColor="@color/grey_999"
            android:textSize="12sp" />


        <com.futrue.huomai.widget.MultiImageUploadView
            android:id="@+id/v_upload_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:background="@color/frame_white_color"
            android:paddingStart="2dp"
            android:paddingEnd="8dp"
            android:paddingBottom="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/space"
            android:orientation="horizontal">

            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@mipmap/write_a"
                android:drawablePadding="3dp"
                android:paddingStart="12dp"
                android:paddingTop="7dp"
                android:paddingEnd="12dp"
                android:paddingBottom="7dp"
                android:textColor="@color/grey_999"
                android:textSize="12sp"
                app:qmui_borderColor="@color/grey_EAEAEA"
                app:qmui_borderWidth="1dp"
                app:qmui_radius="25dp"
                android:text="好友" />


            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                android:id="@+id/bt_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:drawableStart="@mipmap/write_location"
                android:drawablePadding="3dp"
                android:paddingStart="12dp"
                android:paddingTop="7dp"
                android:paddingEnd="12dp"
                android:paddingBottom="7dp"
                android:textColor="@color/grey_999"
                android:textSize="12sp"
                app:qmui_borderColor="@color/grey_EAEAEA"
                app:qmui_borderWidth="1dp"
                app:qmui_radius="25dp"
                android:text="重庆市" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_message"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/space"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="@dimen/space"
            android:background="@drawable/shape_write_bg"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="12dp"
                android:src="@mipmap/write_message" />

            <TextView
                style="@style/TextViewTheme"
                android:layout_marginStart="8dp"
                android:text="选择话题"
                android:textSize="16sp" />

            <TextView
                style="@style/TextViewTheme"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="选择话题会有更多的赞哦~"
                android:textColor="@color/grey_999"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="12dp"
                android:src="@mipmap/shop_white_arrow" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_shopping"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="@dimen/space"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="@dimen/space"
            android:background="@drawable/shape_write_bg"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:src="@mipmap/shopping" />

            <TextView
                style="@style/TextViewTheme"
                android:layout_marginStart="8dp"
                android:text="选择相关宝贝"
                android:textSize="16sp" />

            <TextView
                style="@style/TextViewTheme"
                android:layout_width="0dp"
                android:layout_marginStart="8dp"
                android:layout_weight="1"
                android:gravity="end"
                android:text="选择宝贝会有更多的赞哦~"
                android:textColor="@color/grey_999"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="6dp"
                android:layout_height="11dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="12dp"
                android:src="@mipmap/shop_white_arrow" />

        </LinearLayout>

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt_publish"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginStart="@dimen/space"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="@dimen/space"
            android:layout_marginBottom="5dp"
            android:text="发布"
            android:textColor="@color/textColor"
            android:textSize="16sp"
            app:qmui_backgroundColor="@color/yellow_FADC80"
            app:qmui_borderWidth="0dp"
            app:qmui_radius="150dp" />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>