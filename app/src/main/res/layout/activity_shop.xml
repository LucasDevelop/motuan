<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="31dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="2dp"
            android:padding="10dp"
            android:src="@mipmap/frame_ic_back" />


        <TextView
            android:id="@+id/iv_title"
            style="@style/TextViewTheme"
            android:layout_centerInParent="true"
            android:lines="1"
            android:maxEms="7"
            android:textSize="18sp"
            tools:text="丁丁家时尚搭配qqq" />


        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:id="@+id/bt_send"
            android:layout_width="80dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:text="发接麦"
            android:textColor="@color/textColor"
            android:textSize="13sp"
            app:qmui_backgroundColor="@color/yellow_FECC32"
            app:qmui_borderWidth="0px"
            app:qmui_radius="25dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_E6E6E6" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_dynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/space">

                <ImageView
                    android:id="@+id/iv_head"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    tools:src="@mipmap/my_default_avatar" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_name"
                        style="@style/TextViewTheme"
                        android:drawableRight="@mipmap/shop_white_arrow"
                        android:drawablePadding="8dp"
                        android:textSize="16sp"
                        tools:text="丁丁家时尚搭配的小店" />

                    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
                        android:layout_width="wrap_content"
                        android:layout_height="17dp"
                        android:layout_marginTop="6dp"
                        android:drawableStart="@mipmap/personal"
                        android:drawablePadding="4dp"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:text="已认证"
                        android:textColor="@color/minorTextColor"
                        android:textSize="11sp"
                        app:qmui_backgroundColor="@color/grey_F6F6F6"
                        app:qmui_borderWidth="0px"
                        app:qmui_radius="125dp" />


                    <TextView
                        android:id="@+id/tv_content"
                        style="@style/TextViewTheme"
                        android:layout_marginTop="6dp"
                        android:textColor="@color/grey_999"
                        android:textSize="12sp"
                        tools:text="2小时前来过  总销量 1258 件" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/space"
                android:layout_marginEnd="@dimen/space"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        style="@style/TextViewTheme"
                        android:text="商品质量"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_goods"
                        style="@style/TextViewTheme"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/yellow_FECC32"
                        android:textSize="13sp"
                        tools:text="4.7" />


                    <TextView
                        android:id="@+id/tv_goodsGrade"
                        style="@style/TextViewTheme"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/shape_yellow_circle"
                        android:gravity="center"
                        android:textColor="@color/yellow_FECC32"
                        android:textSize="11sp"
                        tools:text="高" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal">

                    <TextView
                        style="@style/TextViewTheme"
                        android:text="服务态度"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_service"
                        style="@style/TextViewTheme"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/yellow_FECC32"
                        android:textSize="13sp"
                        tools:text="4.7" />


                    <TextView
                        android:id="@+id/tv_serviceGrade"
                        style="@style/TextViewTheme"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/shape_yellow_circle"
                        android:gravity="center"
                        android:textColor="@color/yellow_FECC32"
                        android:textSize="11sp"
                        tools:text="高" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end">

                    <TextView
                        style="@style/TextViewTheme"
                        android:text="物流服务"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_expressage"
                        style="@style/TextViewTheme"
                        android:layout_marginStart="5dp"
                        android:textColor="@color/yellow_FECC32"
                        android:textSize="13sp"
                        tools:text="4.7" />


                    <TextView
                        android:id="@+id/tv_expressageGrade"
                        style="@style/TextViewTheme"
                        android:layout_marginStart="5dp"
                        android:background="@drawable/shape_yellow_circle"
                        android:gravity="center"
                        android:textColor="@color/yellow_FECC32"
                        android:textSize="11sp"
                        tools:text="高" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/grey_F7F7F7"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="12dp">

                <TextView
                    style="@style/TextViewTheme"
                    android:text="在售商品"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_goodsNum"
                    style="@style/TextViewTheme"
                    android:layout_marginStart="6dp"
                    android:textColor="@color/grey_999"
                    android:textSize="13sp"
                    tools:text="25件" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/frame_recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>