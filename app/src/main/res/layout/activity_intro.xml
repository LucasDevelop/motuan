<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/TextViewTheme"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingStart="12dp"
            android:paddingEnd="10dp"
            android:text="取消"
            android:textSize="16sp" />

        <TextView
            style="@style/TextViewTheme"
            android:layout_centerInParent="true"
            android:text="设置个人介绍"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/tv_confirm"
            style="@style/TextViewTheme"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:enabled="false"
            android:gravity="center_vertical"
            android:paddingStart="10dp"
            android:paddingEnd="12dp"
            android:text="完成"
            android:textColor="@color/grey_999"
            android:textSize="16sp" />

    </RelativeLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_E6E6E6" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="172dp"
        android:layout_marginStart="@dimen/space"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="@dimen/space"
        android:background="@drawable/shape_changen_bg"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="start"
            android:hint="请输入昵称"
            android:maxLength="255"
            android:lineSpacingExtra="3dp"
            android:textColor="@color/textColor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_number"
            style="@style/TextViewTheme"
            android:layout_width="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:gravity="end"
            android:text="0/255"
            android:textColor="@color/grey_999" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_hint"
        style="@style/TextViewTheme"
        android:layout_marginStart="24dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="24dp"
        android:textColor="@color/minorTextColor"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="142dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="你可以写"
            android:textColor="@color/grey_999"
            android:textSize="13sp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingStart="13dp"
            android:paddingTop="7dp"
            android:paddingEnd="13dp"
            android:paddingBottom="7dp"
            android:text="兴趣爱好"
            android:textColor="@color/textColor"
            android:textSize="13sp"
            app:qmui_backgroundColor="@color/grey_F6F6F6"
            app:qmui_borderWidth="0px"
            app:qmui_radius="250dp" />


        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingStart="13dp"
            android:paddingTop="7dp"
            android:paddingEnd="13dp"
            android:paddingBottom="7dp"
            android:text="学校"
            android:textColor="@color/textColor"
            android:textSize="13sp"
            app:qmui_backgroundColor="@color/grey_F6F6F6"
            app:qmui_borderWidth="0px"
            app:qmui_radius="250dp" />

        <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:paddingStart="13dp"
            android:paddingTop="7dp"
            android:paddingEnd="13dp"
            android:paddingBottom="7dp"
            android:text="职业"
            android:textColor="@color/textColor"
            android:textSize="13sp"
            app:qmui_backgroundColor="@color/grey_F6F6F6"
            app:qmui_borderWidth="0px"
            app:qmui_radius="250dp" />

    </LinearLayout>


</LinearLayout>